// SpotFinder — Supabase(PostgreSQL) + PostGIS
// PostGIS geography(Point)는 Prisma에서 Unsupported로 선언 후, 마이그레이션/raw SQL로 처리

generator client {
  provider = "prisma-client-js"
}

// v7: connection URL은 prisma.config.ts의 datasource.url로 이동
datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reviews   Review[]
}

model Place {
  id          String   @id @default(uuid())
  name        String
  address     String?
  description String?
  category    String?
  phone       String?
  imageUrl    String?  @map("image_url")
  // PostGIS geography(Point, 4326). 실제 DDL은 Supabase SQL 마이그레이션에서 생성. Prisma raw SQL로 조회/삽입.
  location    Unsupported("geography(Point, 4326)")?
  rating      Decimal  @default(0.0) @db.Decimal(2, 1)
  reviewCount Int      @default(0) @map("review_count")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("places")
}

model Review {
  id        String   @id @default(uuid())
  placeId   String
  userId    String
  rating    Decimal  @db.Decimal(2, 1) // 0.0 ~ 5.0
  content   String?  @db.Text
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([placeId])
  @@index([userId])
}
